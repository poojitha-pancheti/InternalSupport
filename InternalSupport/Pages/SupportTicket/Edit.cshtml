@page
@model InternalSupport.Pages.SupportTicket.EditModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupportTickets.id" />
            <div class="form-group">
                <label asp-for="SupportTickets.id" class="control-label"></label>
            </div>

            <div class="form-group">
                <label asp-for="SupportTickets.Email" class="control-label"></label>
                <input asp-for="SupportTickets.Email" class="form-control" />
                <span asp-validation-for="SupportTickets.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportTickets.Subject" class="control-label"></label>
                <input asp-for="SupportTickets.Subject" class="form-control" />
                <span asp-validation-for="SupportTickets.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportTickets.Description" class="control-label"></label>
                <input asp-for="SupportTickets.Description" class="form-control" />
                <span asp-validation-for="SupportTickets.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupportTickets.created" class="control-label"></label>
                <input asp-for="SupportTickets.created" class="form-control" readonly />
                <span asp-validation-for="SupportTickets.created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Status:</label>
                 @Html.DropDownList("StatusData",( IEnumerable < SelectListItem >) ViewData["StatusList"] )
              </div>
             <div class="form-group">
                <label asp-for="SupportTickets.Assigned" class="control-label"></label>
                <span asp-validation-for="SupportTickets.Assigned" class="text-danger"></span>
                
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
