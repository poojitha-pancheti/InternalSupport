@page
@model InternalSupport.Pages.SupportTicket.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Submit a request</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupportTickets.Email" class="control-label"></label>
                <input asp-for="SupportTickets.Email" type="email" class="form-control" style="width:800px;" required />
                <span asp-validation-for="SupportTickets.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportTickets.Subject" class="control-label"></label>
                <input asp-for="SupportTickets.Subject" class="form-control" style="width:800px;;" required />
                <span asp-validation-for="SupportTickets.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportTickets.Description" class="control-label" ></label>
                <input asp-for="SupportTickets.Description" class="form-control" style="width:800px;height:100px;" required />
                <span asp-validation-for="SupportTickets.Description" class="text-danger"></span>
            </div>
            

            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
